<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>

    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaijaan|Roboto" rel="stylesheet">
    <style type="text/css">
        span{
            font-weight: bold;
            font-size: large;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="jumbotron">
        <h2>Hello welcome!</h2><br>

        <span>Name: </span> &nbsp; &nbsp; <span> <%= data[0].consumer_Fname %> </span> <br>
        <span>Age: </span> &nbsp; &nbsp; <span> <%= data[0].age %> </span>

    </div >
    <br><br>
<div class="custo_details" style="background-color: #0a0a0a;padding: 20px;border-radius: 20px;">
    <div class="row">
        <div class="col-sm-6">
            <button class="btn btn-primary bill">View Bill</button>
        </div>
        <div class="col-sm-6">
            <p><span class="cds" id="bill"></span></p>
        </div>
    </div><br>
    <div class="row">
        <div class="col-sm-6">
            <button class="btn btn-primary rates">View Rates</button>
        </div>
        <div class="col-sm-6">
            <span class="cds" id="rate"></span>
        </div>
    </div> <br>
    <div class="row">
        <div class="col-sm-6">
            <button class="btn btn-primary meter">Meter Details</button>
        </div>
        <div class="col-sm-6">
            <span class="cds" id="meter"></span>
        </div>
    </div><br>
    <div class="row">
        <div class="col-sm-6">
            <button class="btn btn-primary reigon">View Reigon</button>
        </div>
        <div class="col-sm-6">
            <span class="cds" id="reigon"></span>
        </div>
    </div>
</div>

</div>




<script type="text/javascript" src="js/jquery.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<script>
    var aadhar = <%= aadhar %>;
        console.log(aadhar);
    $(".bill").click(function(){
        $.post("/getbill",
            {
                aadhar: aadhar
            },
            function(data, status){
                document.getElementById('bill').innerHTML = data[0].UNIT + ' UNIT';
            });
    });
    $(".rates").click(function(){
        $.post("/getrates",
            {
                aadhar: aadhar
            },
            function(data, status){
                var data = data[0];
                console.log(data);
                var totalcharge = data.BASE_Charge + data.additional_charges +
                                    data.service_charge;
                document.getElementById('rate').innerHTML = totalcharge + ' Rs.';
            });
    });
    $(".meter").click(function(){
        $.post("/getmeter",
            {
                aadhar: aadhar
            },
            function(data, status){
                var data = data[0];
                console.log(data);

                document.getElementById('meter').innerHTML = 'meter type is: '+ data.TYPE+
                                                            ' and sanctionloaded is ' + data.SANCTIONED_LOAD;
            });
    });
    $(".reigon").click(function(){
        $.post("/getreigon",
            {
                aadhar: aadhar
            },
            function(data, status){
                var data = data[0];
                console.log(data);

                document.getElementById('reigon').innerHTML = 'reigon is: '+ data.REGION_NAME;
            });
    });

</script>
</body>
</html>
